@page
@model RegisterModel
@{

}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
  
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.Name" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.Nif" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Nif"></label>
                <span asp-validation-for="Input.Nif" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.Age" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Age"></label>
                <span asp-validation-for="Input.Age" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Address" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Address"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.AddressComplement" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.AddressComplement"></label>
                <span asp-validation-for="Input.AddressComplement" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.CPost" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.CPost"></label>
                <span asp-validation-for="Input.CPost" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.CellPhone" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.CellPhone"></label>
                <span asp-validation-for="Input.CellPhone" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.Telephone" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Telephone"></label>
                <span asp-validation-for="Input.Telephone" class="text-danger"></span>
            </div>
            <br>

            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Complete with your details.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            Register in the Online Store to find all the products you need.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Use your email to enter @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
