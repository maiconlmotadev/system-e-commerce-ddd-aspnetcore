@model Entities.Entities.Product

@{
    ViewData["Title"] = "RemoveCart";
}

<h1>Remove product from cart</h1>

<h3>Are you sure you want to delete this: @Html.DisplayFor(model => model.Name) ?</h3>
<div>

    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Observation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Observation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BuyQuant)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BuyQuant)
        </dd>
        
    </dl>
    
    <form asp-action="RemoveCart">
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-action="ListProductsUserCart">Back to cart list</a>
    </form>
</div>
